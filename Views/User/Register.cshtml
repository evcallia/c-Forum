@{
    ViewData["Title"] = "Forum Registration";
}
@model forum.Models.RegistrationUser

<div class="container login-reg-content">
    <h1>Welcome to the Forum App!</h1>
    <h2>Please register here</h2>
    <h4>Login</h4>
    <form asp-controller="User" asp-action="ProcessRegistration" method="post" role="form">
        <div class="form-group row">
            <label asp-for="firstName" class="col-xs-3 col-form-label">First Name: </label>
            <div class="col-xs-6">
                <input asp-for="firstName" class="form-control"/>
            </div>
            <span class="col-xs-12 error" asp-validation-for="firstName"></span>
        </div>
        <div class="form-group row">
            <label asp-for="lastName" class="col-xs-3 col-form-label">Last Name: </label>
            <div class="col-xs-6">
                <input asp-for="lastName" class="form-control"/>
            </div>
            <span class="col-xs-12 error" asp-validation-for="lastName"></span>
        </div>
        <div class="form-group row">
            <label asp-for="email" class="col-xs-3 col-form-label">Email: </label>
            <div class="col-xs-6">
                <input asp-for="email" class="form-control"/>
            </div>
            <span class="col-xs-12 error" asp-validation-for="email"></span>
        </div>
        <div class="form-group row">
            <label asp-for="password" class="col-xs-3 col-form-label">Password: </label>
            <div class="col-xs-6">
                <input asp-for="password" class="form-control"/>
            </div>
            <span class="col-xs-12 error" asp-validation-for="password"></span>
        </div>
        <div class="form-group row">
            <label asp-for="password_confirmation" class="col-xs-3 col-form-label">Password Confirmation: </label>
            <div class="col-xs-6">
                <input asp-for="password_confirmation" class="form-control"/>
            </div>
            <span class="col-xs-12 error" asp-validation-for="password_confirmation"></span>
        </div>
        <button type="submit" class="btn btn-default">Register!</button>
    </form>
    <p>Already a member? Login <a asp-controller="User" asp-action="ShowLogin">here</a></p>
</div>
