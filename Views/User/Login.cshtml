@{
    ViewData["Title"] = "Forum Login";
}
@model forum.Models.RegistrationUser

<div class="container">
    <div class="login-reg-content">
        <h1>Login to the Forum App!</h1>
        <div class="row">
            <div class="col-xs-2"></div>
            <h3 class="col-xs-6">Login</h3>
        </div>
        <form asp-controller="User" asp-action="ProcessLogin" method="post" role="form">
            <div class="form-group row">
                <div class="col-xs-2"></div>
                <label asp-for="email" class="col-xs-2 col-form-label">Email: </label>
                <div class="col-xs-6">
                    <input asp-for="email" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-2"></div>
                <label asp-for="password" class="col-xs-2 col-form-label">Password: </label>
                <div class="col-xs-6">
                    <input asp-for="password" class="form-control"/>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-2"></div>
                <div class="col-xs-10 error" asp-validation-summary="All"></div>
            </div>
            <div class="row">
                <div class="col-xs-2"></div>
                <button type="submit" class="btn btn-default">Sign In</button>
            </div>
        </form>
        <div class="spacing"></div>
        <p class="centered">Not a member? Register <a asp-controller="User" asp-action="ShowRegister">here</a></p>
    </div>
</div>
