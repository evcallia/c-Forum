@model forum.Models.Topic

<div class="create-topic">
    <h3>Create a New Topic</h3>
    <form asp-controller="Topic" asp-action="CreateTopic" method="POST" role="form">
        <input type="hidden" asp-for="CategoryId">
        <div class="form-group row">
            <div class="col-xs-4">
                <input class="form-control" type="text" asp-for="Name" placeholder="Enter topic name...">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-xs-4">
                <textarea class="form-control" asp-for="Description" cols="30" rows="4" placeholder="Enter Description here..."></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-default">Add Topic</button>
    </form>
    @if(@ViewBag.Errors != null){
        @foreach(var error in @ViewBag.Errors){
            <p class="error">@error</p>
        }
    }
</div>