@model forum.Models.Comment

<div class="create-comment">
    <h3>Post a Comment</h3>
    <form asp-controller="Topic" asp-action="CreateComment" method="POST" role="form">
        <input type="hidden" asp-for="TopicId">
        <div class="form-group row">
            <div class="col-xs-4">
                <input class="form-control" type="text" asp-for="Content" placeholder="Enter comment here...">
            </div>
        </div>
        <button type="submit" class="btn btn-default">Add Comment</button>
    </form>
    @if(@ViewBag.Errors != null){
        @foreach(var error in @ViewBag.Errors){
            <p class="error">@error</p>
        }
    }
</div>